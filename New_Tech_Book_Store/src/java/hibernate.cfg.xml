<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.DerbyDialect</property>
    <property name="hibernate.connection.driver_class">org.apache.derby.jdbc.ClientDriver</property>
    <property name="hibernate.connection.url">jdbc:derby://localhost:1527/TechBook</property>
    <property name="hibernate.connection.username">TechBook</property>
    <property name="hibernate.connection.password">password@123</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <mapping resource="techBook/Customer.hbm.xml"/>
    <mapping class="" file="" jar="" package="" resource="techBook/Book.hbm.xml"/>
    <mapping resource="techBook/Orderdetail.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
